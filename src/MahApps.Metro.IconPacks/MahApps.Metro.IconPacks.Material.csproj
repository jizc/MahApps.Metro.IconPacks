<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras">
    <!-- Project properties -->
    <PropertyGroup>
        <DefineConstants>$(DefineConstants);MATERIAL</DefineConstants>
        <IconsName>Material</IconsName>
        <AssemblyName>MahApps.Metro.IconPacks.Material</AssemblyName>
        <Title>MahApps.Metro.IconPacks.Material</Title>
        <RootNamespace>MahApps.Metro.IconPacks</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <Compile Remove="*.cs;Icons\**\*.cs" />
        <Compile Include="**\$(IconsName)\*.cs" Exclude="**\$(IconsName)\Path*.*;**\bin\**\*.*;**\obj\**\*.*" />
        <Page Generator="MSBuild:Compile" Include="Themes\$(IconsName)\*.xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" />
        <Page Generator="MSBuild:Compile" Include="Themes\PackIcon$(IconsName).xaml" Link="Themes\%(RecursiveDir)%(Filename)%(Extension)" SubType="Designer" />
    </ItemGroup>
</Project>